@model Address

<form method="POST" asp-controller="Users" asp-action="ChangeAddress">
    <div class="form-group">
        <label asp-for="@Model.Data">Address</label>
        <textarea asp-for="@Model.Data" class="form-control" rows="3"></textarea>
        <span asp-validation-for="@Model.Data" class="small text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}