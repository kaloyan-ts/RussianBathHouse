@model PhoneNumber

@{ 
    ViewData["Title"] = "Change Phone Number";
}

<form method="POST" asp-controller="Users" asp-action="ChangePhoneNumber">
    <div class="form-group">
        <label asp-for="@Model.Data">Phone Number</label>
        <input asp-for="@Model.Data" type="tel" pattern="[+][3][5][9][0-9]{2}[0-9]{3}[0-9]{4}" class="form-control" placeholder="Enter your new phone number">
        <span asp-validation-for="@Model.Data" class="small text-danger"></span>
        <small class="form-text text-muted">Your phone number should start with <span class="badge badge-info">+359</span></small>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
