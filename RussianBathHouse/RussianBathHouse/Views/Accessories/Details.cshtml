@model AccessoryDetailsViewModel

<div class="card">
    <img class="card-img-top" src="@Model.Image" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Price: @Model.Price $</li>
        <li class="list-group-item">Quantity left: @Model.QuantityLeft</li>
    </ul>
    <div class="card-body row">
        <div class="col-4">
            <a type="button" asp-controller="Accessories" asp-action="Buy"  asp-route-id="@Model.Id" class="btn-primary btn-lg btn-block">Buy</a>
        </div>
        <div class="col-4">
            <a type="button" asp-controller="Accessories" asp-action="Edit" 
                    asp-route-id="@Model.Id" class="btn-secondary btn-lg btn-block">Edit</a>
        </div>
        <div class="col-4">
            <a type="button" asp-controller="Accessories" asp-action="Delete" 
                    asp-route-id="@Model.Id" class="btn-danger btn-lg btn-block">Delete</a>
        </div>
    </div>
</div>