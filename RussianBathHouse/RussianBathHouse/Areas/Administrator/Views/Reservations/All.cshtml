@model List<ReservationsUpcomingListModel>
@{
    ViewData["Title"] = "All Reservations";
}

@{

    var maxRows = Math.Ceiling((double)Model.Count / 3);
}

@if (Model.Any())
{
    for (int i = 0; i < maxRows; i++)
    {
        <div class="card-group text-center">
            <div class="row">
                @{
                    var count = Model.Count >= 3 ? 3 : Model.Count == 2 ? 2 : Model.Count == 1 ? 1 : 0;
                }
                @for (int r = 0; r < count; r++)
                {
                    var reservation = Model[r];
                    <div class="row mb-3">
                        <div class="card col-8">
                            <div class="card-body">
                                <h5 class="card-title">Reservation:</h5>
                                <p class="card-text">Services chosen:</p>
                                <ul class="list-group-horizontal">
                                    @foreach (var service in reservation.ReservationServices)
                                    {
                                        <li class="list-group-item">@service.Description</li>
                                    }
                                </ul>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Number of People: @reservation.NumberOfPeople</li>
                                <li class="list-group-item">Date of reservation: @reservation.ReservedFrom</li>
                                <li class="list-group-item">Cabin: @reservation.CabinNumber</li>
                            </ul>
                        </div>
                    </div>
                }
                @{
                     Model.RemoveRange(0, count);
                }
            </div>
        </div>
    }

}
else
{
    <h3 class=" alert-heading text-center">There aren't any reservaions for the upcoming days!</h3>
}


